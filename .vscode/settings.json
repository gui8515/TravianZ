{
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"workbench.iconTheme": "material-icon-theme",
	"files.associations": {
		"*.tpl": "php"
	},
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.formatOnSave": true,
	"[php]": {
		"editor.defaultFormatter": "wongjn.php-sniffer"
		// "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
	},
	"php-docblocker.alignParams": true,
	"php-docblocker.author": {
		"name": "Guilherme Gois Pereira",
		"email": "gui8515@gmail.com"
	},
	"php-docblocker.alignReturn": true,
	"php-docblocker.useShortNames": true,
	"php-docblocker.returnGap": true,
	"php-docblocker.qualifyClassNames": true,
	"workbench.startupEditor": "newUntitledFile",
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true,
		"**/.hg/store/**": true,
		"**/vendor/*/**": true,
		"**/.nuxt/**": true,
	},
	"files.exclude": {
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true
	},
	// PHP
	// Here you can use your path to php
	"php.validate.executablePath": "C:\\wamp64\\bin\\php\\php8.1.7\\php.exe",
	"php.suggest.basic": false,
	"phpSniffer.run": "onType",
	"phpSniffer.autoDetect": true,
	// Here you can use another coding-style
	"phpSniffer.standard": "PSR12",
	"phpSniffer.executablesFolder": ".\\GameEngine\\vendor\\bin",
	"editor.fontFamily": "Fira Code",
	"editor.fontSize": 12,
	"editor.fontLigatures": true,
}
